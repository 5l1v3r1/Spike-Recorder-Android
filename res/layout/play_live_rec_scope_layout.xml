<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playLiveParentLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <include layout="@layout/base_scope_layout"/>

    <LinearLayout
        android:id="@+id/buttonHolderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top">

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:contentDescription="@string/pause_button"
            android:padding="5sp"
            android:src="@drawable/pause_button"/>

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:contentDescription="@string/play_button"
            android:padding="5sp"
            android:src="@drawable/play_button"/>

        <ImageButton
            android:id="@+id/recordButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="@string/start_recording_button"
            android:padding="5sp"
            android:visibility="gone"
            android:src="@drawable/ic_record"/>

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"
            android:padding="5sp"
            android:src="@drawable/close_button"
            android:contentDescription="@string/close_view_button">
        </ImageButton>
    </LinearLayout>

    <TextView
        android:id="@+id/TapToStopRecordingTextView"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#ffff0000"
        android:gravity="center"
        android:layout_gravity="top|center_horizontal"
        android:text="@string/tap_to_stop_recording"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:visibility="gone">
    </TextView>
</FrameLayout>