<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ibtn_threshold"
        android:layout_width="@dimen/min_button_tappable_h"
        android:layout_height="@dimen/min_button_tappable_h"
        android:layout_marginStart="58dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin_quarter"
        android:background="@drawable/circle_gray_white"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pulse_black_24dp"
        tools:ignore="ContentDescription"/>

    <ImageButton
        android:id="@+id/ibtn_avg_trigger_type"
        android:layout_width="@dimen/min_button_tappable_h"
        android:layout_height="@dimen/min_button_tappable_h"
        android:layout_marginTop="@dimen/activity_vertical_margin_half"
        android:background="@drawable/circle_gray_white"
        app:srcCompat="@drawable/ic_trigger_threshold_black_24dp"
        app:layout_constraintRight_toLeftOf="@+id/ibtn_threshold"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_threshold"
        tools:ignore="ContentDescription"/>

    <SeekBar
        android:id="@+id/sb_averaged_sample_count"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:minHeight="10dp"
        android:visibility="invisible"
        android:indeterminate="false"
        android:max="100"
        android:progress="1"
        app:layout_constraintLeft_toRightOf="@+id/ibtn_threshold"
        app:layout_constraintTop_toTopOf="@+id/ibtn_threshold"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_threshold"/>

    <TextView
        android:id="@+id/tv_averaged_sample_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/default_threshold_amount"
        android:textColor="@color/green"
        app:layout_constraintLeft_toRightOf="@+id/sb_averaged_sample_count"
        app:layout_constraintTop_toTopOf="@+id/sb_averaged_sample_count"
        app:layout_constraintBottom_toBottomOf="@+id/sb_averaged_sample_count"/>

    <FrameLayout
        android:id="@+id/playback_scope_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_rms"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="RMS: 0.0009 mV"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/tv_spike_count0"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_quarter"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/green"
        android:drawableStart="@drawable/circle_red"
        app:layout_constraintLeft_toLeftOf="@+id/tv_rms"
        app:layout_constraintBottom_toTopOf="@+id/tv_rms"
        app:layout_constraintRight_toRightOf="@+id/tv_rms"
        tools:text="0(0.0Hz)"/>

    <TextView
        android:id="@+id/tv_spike_count1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_quarter"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/green"
        android:drawableStart="@drawable/circle_yellow"
        app:layout_constraintLeft_toLeftOf="@+id/tv_rms"
        app:layout_constraintBottom_toTopOf="@+id/tv_spike_count0"
        app:layout_constraintRight_toRightOf="@+id/tv_rms"
        tools:text="0(0.0Hz)"/>

    <TextView
        android:id="@+id/tv_spike_count2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin_quarter"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/green"
        android:drawableStart="@drawable/circle_green"
        app:layout_constraintLeft_toLeftOf="@+id/tv_rms"
        app:layout_constraintBottom_toTopOf="@+id/tv_spike_count1"
        app:layout_constraintRight_toRightOf="@+id/tv_rms"
        tools:text="0(0.0Hz)"/>

    <ImageView
        android:id="@+id/iv_play_pause"
        android:layout_width="@dimen/min_button_tappable_h"
        android:layout_height="@dimen/min_button_tappable_h"
        android:layout_marginStart="@dimen/threshold_drag_surface_w"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_play_circle_filled_orange_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sb_audio_progress"
        app:layout_constraintRight_toLeftOf="@+id/sb_audio_progress"
        app:layout_constraintBottom_toBottomOf="@+id/sb_audio_progress"
        tools:ignore="ContentDescription"/>

    <SeekBar
        android:id="@+id/sb_audio_progress"
        android:layout_width="0dp"
        android:layout_height="@dimen/min_button_tappable_h"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_goneMarginStart="@dimen/threshold_drag_surface_w_with_padding"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        app:layout_goneMarginEnd="@dimen/threshold_drag_surface_w_with_padding"
        android:layout_marginBottom="@dimen/rms_time_top_margin"
        android:indeterminate="false"
        app:layout_constraintLeft_toRightOf="@+id/iv_play_pause"
        app:layout_constraintRight_toLeftOf="@+id/tv_progress_time"
        app:layout_constraintBottom_toTopOf="@+id/tv_rms_time"/>

    <TextView
        android:id="@+id/tv_progress_time"
        android:gravity="center"
        android:layout_width="@dimen/min_button_tappable_h"
        android:layout_height="@dimen/min_button_tappable_h"
        android:layout_marginEnd="@dimen/threshold_drag_surface_w"
        app:layout_constraintLeft_toRightOf="@+id/sb_audio_progress"
        app:layout_constraintTop_toTopOf="@+id/sb_audio_progress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/sb_audio_progress"
        tools:text="00:30"/>

    <TextView
        android:id="@+id/tv_rms_time"
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:layout_marginBottom="@dimen/rms_time_bottom_margin"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@color/blue"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>