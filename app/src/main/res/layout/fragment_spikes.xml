<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_finding_spikes_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="56dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:indeterminate="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_horizontal_margin_quarter"
            android:paddingEnd="@dimen/activity_horizontal_margin_quarter"
            android:text="@string/label_finding_spikes"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/threshold_drag_surface_w"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="top|end"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibtn_remove_threshold"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_delete_white_32dp"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/threshold0"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:src="@drawable/handle1"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/threshold1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:src="@drawable/handle2"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/threshold2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:src="@drawable/handle3"
            android:visibility="gone"
            android:background="?attr/selectableItemBackgroundBorderless"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/ibtn_add_threshold"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_add_white_32dp"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_select_channel"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin_half"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/label_channel_abbr"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_22"
            android:textStyle="bold"/>
    </LinearLayout>
</FrameLayout>